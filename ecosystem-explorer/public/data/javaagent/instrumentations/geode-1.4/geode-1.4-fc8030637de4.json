{
  "configurations": [
    {
      "default": true,
      "description": "Enables statement sanitization for database queries.",
      "name": "otel.instrumentation.common.db-statement-sanitizer.enabled",
      "type": "boolean"
    }
  ],
  "description": "This instrumentation enables database client spans and database client metrics for Apache Geode cache operations.",
  "has_standalone_library": false,
  "javaagent_target_versions": [
    "org.apache.geode:geode-core:[1.4.0,)"
  ],
  "library_link": "https://geode.apache.org/",
  "name": "geode-1.4",
  "scope": {
    "name": "io.opentelemetry.geode-1.4"
  },
  "semantic_conventions": [
    "DATABASE_CLIENT_SPANS",
    "DATABASE_CLIENT_METRICS"
  ],
  "source_path": "instrumentation/geode-1.4",
  "tags": [
    "geode"
  ],
  "telemetry": [
    {
      "spans": [
        {
          "attributes": [
            {
              "name": "db.name",
              "type": "STRING"
            },
            {
              "name": "db.operation",
              "type": "STRING"
            },
            {
              "name": "db.statement",
              "type": "STRING"
            },
            {
              "name": "db.system",
              "type": "STRING"
            }
          ],
          "span_kind": "CLIENT"
        }
      ],
      "when": "default"
    },
    {
      "metrics": [
        {
          "attributes": [
            {
              "name": "db.namespace",
              "type": "STRING"
            },
            {
              "name": "db.operation.name",
              "type": "STRING"
            },
            {
              "name": "db.system.name",
              "type": "STRING"
            }
          ],
          "description": "Duration of database client operations.",
          "name": "db.client.operation.duration",
          "type": "HISTOGRAM",
          "unit": "s"
        }
      ],
      "spans": [
        {
          "attributes": [
            {
              "name": "db.namespace",
              "type": "STRING"
            },
            {
              "name": "db.operation.name",
              "type": "STRING"
            },
            {
              "name": "db.query.text",
              "type": "STRING"
            },
            {
              "name": "db.system.name",
              "type": "STRING"
            }
          ],
          "span_kind": "CLIENT"
        }
      ],
      "when": "otel.semconv-stability.opt-in=database"
    }
  ]
}